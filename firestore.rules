rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Fungsi helper untuk cek autentikasi
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Aturan untuk transaksi
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && (
        resource.data.customerInfo.userId == request.auth.uid || isAdmin()
      );
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Aturan untuk produk
    match /products/{productId} {
      allow read: if true; // Semua orang bisa melihat produk
      allow write: if isAdmin(); // Hanya admin bisa edit produk
    }

    // Aturan untuk users
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
